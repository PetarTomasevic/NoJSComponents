@inherits NoJS.Video.VideoViewerBase

<video width="@VideoWidth" controls poster="@PosterImage">
    <source src="@VideoSource" type="@VideoType">
    @if (SubtitlesList != null)
    {
        @foreach (var item in SubtitlesList)
        {

            if (@item.SetAsDefault)
            {
                <track label="@item.Label" kind="@item.Kind" srclang="@item.SrcLang" src="@item.Src" default>
            }
            else
            {
                <track label="@item.Label" kind="@item.Kind" srclang="@item.SrcLang" src="@item.Src">
            }

        }
    }
    @NotSupportedText
</video>