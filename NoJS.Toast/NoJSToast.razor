@inherits NoJSToastBase

<div class="nojs-toast @(IsVisible ? "nojs-toast-visible" : null) @BackgroundCssClass">
    <div class="nojs-toast-icon">
        <i class="fa fa-@IconCssClass" aria-hidden="true"></i>
    </div>
    <div class="nojs-toast-body">
        <h5>@Heading</h5>
        <p>@Message</p>
    </div>
</div>