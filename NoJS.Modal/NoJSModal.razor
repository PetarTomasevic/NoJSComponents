@inherits NoJS.Modal.NoJSModalBase

<div class="nojs-modal-container @ComponentPosition @(IsVisible ? "nojs-modal-active" : string.Empty)">

    <div class="nojs-modal-overlay"></div>

    <div class="nojs-modal-wrapper">
        <div class="@ComponentStyle">
            <div class="nojs-modal-header">
                <h3 class="nojs-modal-title">@Title</h3>
                @if (!ComponentHideCloseButton)
                {
                    <button type="button" class="nojs-modal-close" @onclick="@(() => NoJSModalService.Cancel())">
                        <span>&times;</span>
                    </button>
                }
            </div>
            <div class="nojs-modal-content">
                <CascadingValue Value="@Parameters">
                    @Content
                </CascadingValue>
            </div>
        </div>
    </div>
</div>